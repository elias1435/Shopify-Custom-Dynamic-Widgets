{% comment %}
  CTA Offer Widget — highly configurable, OS 2.0
{% endcomment %}

<section
  id="cta-offer-{{ section.id }}"
  class="cta-offer"
  data-width="{{ section.settings.width }}"
  data-features="{{ section.settings.features_layout }}"
  style="
    --ow-bg: {{ section.settings.bg }};
    --ow-pt: {{ section.settings.padding_top }}px;
    --ow-pb: {{ section.settings.padding_bottom }}px;

    /* heading */
    --ow-title-color: {{ section.settings.title_color }};
    --ow-title-size: {{ section.settings.title_size }}px;
    --ow-sub-color: {{ section.settings.subtitle_color }};
    --ow-sub-size: {{ section.settings.subtitle_size }}px;

    /* card */
    --ow-card-bg: {{ section.settings.card_bg }};
    --ow-card-border: {{ section.settings.card_border }};
    --ow-card-radius: {{ section.settings.card_radius }}px;
    --ow-card-shadow: {% if section.settings.card_shadow %}0 8px 30px rgba(0,0,0,.06){% else %}none{% endif %};

    /* pricing */
    --ow-old-color: {{ section.settings.old_price_color }};
    --ow-old-size: {{ section.settings.old_price_size }}px;
    --ow-new-color: {{ section.settings.new_price_color }};
    --ow-new-size: {{ section.settings.new_price_size }}px;
    --ow-badge-bg: {{ section.settings.badge_bg }};
    --ow-badge-text: {{ section.settings.badge_text_color }};
    --ow-badge-size: {{ section.settings.badge_size }}px;

    /* CTA */
    --cta-bg: {{ section.settings.cta_bg }};
    --cta-text: {{ section.settings.cta_text }};
    --cta-hover-bg: {{ section.settings.cta_hover_bg }};
    --cta-hover-text: {{ section.settings.cta_hover_text }};
    --cta-border-color: {{ section.settings.cta_border_color }};
    --cta-border-width: {{ section.settings.cta_border_width }}px;
    --cta-radius: {{ section.settings.cta_radius }}px;
    --cta-font-size: {{ section.settings.cta_font_size }}px;
    --cta-py: {{ section.settings.cta_pad_y }}px;
    --cta-px: {{ section.settings.cta_pad_x }}px;

    /* perks in card */
    --ow-perk-color: {{ section.settings.perk_color }};
    --ow-perk-size: {{ section.settings.perk_size }}px;

    /* features (3 below) */
    --ow-feature-icon-bg: {{ section.settings.feature_icon_bg }};
    --ow-feature-icon-size: {{ section.settings.feature_icon_size }}px;
    --ow-feature-title-color: {{ section.settings.feature_title_color }};
    --ow-feature-title-size: {{ section.settings.feature_title_size }}px;
    --ow-feature-text-color: {{ section.settings.feature_text_color }};
    --ow-feature-text-size: {{ section.settings.feature_text_size }}px;
    --ow-features-gap: {{ section.settings.features_gap }}px;
    --ow-features-gap-mobile: {{ section.settings.features_gap_mobile }}px;

    /* Count Down */
    --ow-countdown-color: {{ section.settings.countdown_color }};
    --ow-countdown-size: {{ section.settings.countdown_size | times: 0.4 | plus: 12 | round: 0 }}px;

    /* contact */
    --ow-contact-color: {{ section.settings.contact_color }};
    --ow-contact-size: {{ section.settings.contact_size }}px;
  "
>
  <div class="{% if section.settings.width == 'container' %}page-width{% else %}full-width{% endif %}">
    <div class="ow-inner">
      <!-- Top heading -->
      <div class="ow-intro">
        {% if section.settings.title != blank %}
          <h2 class="ow-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="ow-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>

      <!-- Offer card -->
      <div class="ow-card">
        <div class="ow-card-head">
          {% if section.settings.card_title != blank %}
            <h3 class="ow-card-title">{{ section.settings.card_title }}</h3>
          {% endif %}

          {% if section.settings.countdown_enable %}
            <div
              id="ow-ct-{{ section.id }}"
              class="ow-countdown"
              data-mode="{{ section.settings.countdown_mode }}"
              data-deadline="{{ section.settings.countdown_deadline | escape }}"
              data-daily-time="{{ section.settings.countdown_daily_time }}"
            ></div>
          {% endif %}

          {% if section.settings.card_subtitle != blank %}
            <p class="ow-card-subtitle">{{ section.settings.card_subtitle }}</p>
          {% endif %}
        </div>

        <div class="ow-card-body">
          <div class="ow-pricing">
            {% if section.settings.old_price != blank %}
              <span class="ow-old">{{ section.settings.old_price }}</span>
            {% endif %}
            {% if section.settings.new_price != blank %}
              <span class="ow-new">{{ section.settings.new_price }}</span>
            {% endif %}
            {% if section.settings.badge_label != blank %}
              <span class="ow-badge">{{ section.settings.badge_label }}</span>
            {% endif %}
          </div>

          <div class="ow-cta-wrap">
            {% if section.settings.cta_label != blank and section.settings.cta_url != blank %}
              <a class="ow-cta {% if section.settings.cta_style == 'outline' %}is-outline{% endif %}"
                 href="{{ section.settings.cta_url }}"
                 {% if section.settings.cta_newtab %}target="_blank" rel="noopener"{% endif %}>
                {{ section.settings.cta_label }}
              </a>
            {% endif %}
            {% if section.blocks.size > 0 %}
              <ul class="ow-perks">
                {% for block in section.blocks %}
                  {% if block.type == 'perk' %}
                    <li {{ block.shopify_attributes }}>
                      {{ block.settings.text }}
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
      </div>

      <!-- Features row (3 items) -->
      <div class="ow-features">
        {% for block in section.blocks %}
          {% if block.type == 'feature' %}
            <div class="ow-feature" {{ block.shopify_attributes }}>
              <div class="ow-feature-icon">
                {% if block.settings.icon_type == 'image' and block.settings.icon_image != blank %}
                  <img src="{{ block.settings.icon_image | image_url: width: 96 }}" alt="" width="48" height="48" loading="lazy">
                {% else %}
                  <span class="ow-emoji" style="font-size: var(--ow-feature-icon-size);">{{ block.settings.icon_emoji }}</span>
                {% endif %}
              </div>
              <div class="ow-feature-text">
                <div class="ow-feature-title">{{ block.settings.title }}</div>
                <div class="ow-feature-desc">{{ block.settings.text }}</div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Contact -->
      {% if section.settings.contact_line1 != blank or section.settings.contact_line2 != blank %}
        <div class="ow-contact">
          {% if section.settings.contact_line1 != blank %}<p>{{ section.settings.contact_line1 }}</p>{% endif %}
          {% if section.settings.contact_line2 != blank %}<p>{{ section.settings.contact_line2 }}</p>{% endif %}
        </div>
      {% endif %}
    </div>
  </div>

  <style>
    #cta-offer-{{ section.id }}{background:var(--ow-bg);padding:var(--ow-pt) 1.5rem var(--ow-pb);}
    #cta-offer-{{ section.id }} .ow-inner{max-width:1200px;margin:0 auto;}
    #cta-offer-{{ section.id }} .ow-intro{text-align:center;margin-bottom:2rem;}
    #cta-offer-{{ section.id }} .ow-title{color:var(--ow-title-color);font-size:clamp(28px,5vw,var(--ow-title-size));font-weight:800;margin:0 0 .5rem;}
    #cta-offer-{{ section.id }} .ow-subtitle{color:var(--ow-sub-color);font-size:clamp(14px,3vw,var(--ow-sub-size));max-width:70ch;margin:0 auto;}

    /* Card */
    #cta-offer-{{ section.id }} .ow-card{
      background:var(--ow-card-bg); border:2px solid var(--ow-card-border);
      border-radius:var(--ow-card-radius); box-shadow:var(--ow-card-shadow);
      padding:1.25rem 1.25rem 1.5rem; margin:2rem auto; max-width:940px;
    }
    #cta-offer-{{ section.id }} .ow-card-head{text-align:center;margin-bottom:.75rem;}
    #cta-offer-{{ section.id }} .ow-card-title{font-weight:700;color:var(--ow-new-color);font-size:clamp(20px,3.5vw,28px);margin:0;}
    #cta-offer-{{ section.id }} .ow-card-subtitle{color:var(--ow-sub-color);font-size:clamp(14px,3vw,18px);margin:.25rem 0 0;}

    #cta-offer-{{ section.id }} .ow-card-body{padding-top:.5rem;}
    #cta-offer-{{ section.id }} .ow-pricing{display:flex;align-items:center;justify-content:center;gap:1rem;margin:1rem 0;}
    #cta-offer-{{ section.id }} .ow-old{color:var(--ow-old-color);font-size:var(--ow-old-size);text-decoration:line-through;}
    #cta-offer-{{ section.id }} .ow-new{color:var(--ow-new-color);font-weight:800;font-size:var(--ow-new-size);}
    #cta-offer-{{ section.id }} .ow-badge{background:var(--ow-badge-bg);color:var(--ow-badge-text);padding:.25rem .6rem;border-radius:999px;font-weight:700;font-size:var(--ow-badge-size);}

    /* CTA */
    #cta-offer-{{ section.id }} .ow-cta{display:inline-flex;align-items:center;justify-content:center;
      padding:var(--cta-py) var(--cta-px);font-size:var(--cta-font-size);font-weight:700;text-decoration:none;border-radius:var(--cta-radius);
      background:var(--cta-bg);color:var(--cta-text);border:var(--cta-border-width) solid var(--cta-border-color);
      transition:background .2s ease,color .2s ease,filter .2s ease;}
    #cta-offer-{{ section.id }} .ow-cta.is-outline{background:transparent;color:var(--cta-border-color);}
    #cta-offer-{{ section.id }} .ow-cta:hover{background:var(--cta-hover-bg);color:var(--cta-hover-text);filter:brightness(.98);}
    #cta-offer-{{ section.id }} .ow-cta-wrap{text-align:center;margin:0 auto;}
    #cta-offer-{{ section.id }} .ow-perks{margin:1.5rem auto 0;max-width:560px;color:var(--ow-perk-color);font-size:var(--ow-perk-size);list-style:none;padding:0;text-align:left;display: flex;flex-direction: column;align-items: center;}
    #cta-offer-{{ section.id }} .ow-perks li{margin:0;}
    #cta-offer-{{ section.id }} .ow-perks li::before{content:'✓ ';font-weight:700;margin-right:.25rem;}

    /* Features */
    #cta-offer-{{ section.id }} .ow-features{display:grid;grid-template-columns:1fr;gap:1rem;margin:2rem 0;}
    @media(min-width:768px){#cta-offer-{{ section.id }} .ow-features{grid-template-columns:repeat(3,1fr);gap:1.25rem;}}
    #cta-offer-{{ section.id }} .ow-feature{display:flex;align-items:center;gap:.75rem;}
    #cta-offer-{{ section.id }} .ow-feature-icon{width:5rem;height:5rem;border-radius:999px;background:var(--ow-feature-icon-bg);display:flex;align-items:center;justify-content:center;flex:0 0 auto;}
    #cta-offer-{{ section.id }} .ow-feature-icon img{width:60%;height:60%;object-fit:contain;}
    #cta-offer-{{ section.id }} .ow-emoji{line-height:1;}
    #cta-offer-{{ section.id }} .ow-feature-title{color:var(--ow-feature-title-color);font-weight:700;font-size:var(--ow-feature-title-size);line-height: 1.4em;}
    #cta-offer-{{ section.id }} .ow-feature-desc{color:var(--ow-feature-text-color);font-size:var(--ow-feature-text-size);line-height: 1.4em;}

    /* Flex-centered variant for features */
    #cta-offer-{{ section.id }}[data-features="flex"] .ow-features{display: flex;justify-content: center;gap: var(--ow-features-gap);flex-wrap: wrap;}
    #cta-offer-{{ section.id }}[data-features="flex"] .ow-feature{flex: 0 0 auto;}
    /* Features – grid baseline uses variables */
    #cta-offer-{{ section.id }} .ow-features{display:grid;margin:4rem 0;}

    #cta-offer-{{ section.id }} .ow-countdown{
      color: var(--ow-countdown-color);
      font-size: var(--ow-countdown-size);
      font-weight: 700;
      margin-top: .25rem;
    }
    #cta-offer-{{ section.id }} .ow-countdown small{
      font-weight: 600; opacity: .75; margin-left: .25rem;
    }


    /* 1 column on mobile for flex layout */
    @media (max-width: 767px){
    #cta-offer-{{ section.id }}[data-features="flex"] .ow-features{ gap: var(--ow-features-gap-mobile); }
    #cta-offer-{{ section.id }}[data-features="flex"] .ow-feature{ flex: 0 0 100%; }
    }

    @media(min-width:768px){
    #cta-offer-{{ section.id }} .ow-features{grid-template-columns:repeat(3,1fr);gap: var(--ow-features-gap);/* was 1.25rem */}}

    /* Contact */
    #cta-offer-{{ section.id }} .ow-contact{color:var(--ow-contact-color);font-size:var(--ow-contact-size);text-align:center;margin-top:1.5rem;}
    .ow-contact p {margin-bottom:0;} .ow-contact p:last-child{margin-top:0;}
  </style>

<script>
(function(){
  var root = document.getElementById('cta-offer-{{ section.id }}');
  if(!root) return;
  var el = document.getElementById('ow-ct-{{ section.id }}');
  if(!el) return;

  function parseDailyTime(str){
    var m = (str || '').match(/^(\d{1,2}):(\d{2})$/);
    var hh = 23, mm = 59;
    if(m){ hh = Math.min(23, Math.max(0, parseInt(m[1],10))); mm = Math.min(59, Math.max(0, parseInt(m[2],10))); }
    return {h: hh, m: mm};
  }
  function nextDailyTarget(now, timeStr){
    var t = parseDailyTime(timeStr);
    var target = new Date(now);
    target.setHours(t.h, t.m, 0, 0);
    if(target <= now){ target.setDate(target.getDate() + 1); } // move to tomorrow if passed
    return target;
  }
  function parseDeadline(str){
    // expect "YYYY-MM-DD HH:MM" → convert to "YYYY-MM-DDTHH:MM" (local)
    if(!str) return null;
    var s = str.replace(' ', 'T');
    var d = new Date(s);
    return isNaN(d.getTime()) ? null : d;
  }
  function fmt(n){ return n < 10 ? ('0' + n) : (''+n); }

  var mode = el.getAttribute('data-mode') || 'daily';
  var dailyTime = el.getAttribute('data-daily-time') || '23:59';
  var deadline = parseDeadline(el.getAttribute('data-deadline'));

  function computeTarget(){
    var now = new Date();
    if(mode === 'date' && deadline){ return deadline; }
    return nextDailyTarget(now, dailyTime);
  }

  function render(diffMs){
    if(diffMs < 0) diffMs = 0;
    var totalSec = Math.floor(diffMs / 1000);
    var d = Math.floor(totalSec / 86400);
    var h = Math.floor((totalSec % 86400) / 3600);
    var m = Math.floor((totalSec % 3600) / 60);
    var s = totalSec % 60;

    // show days only when >=1 day left
    if(d > 0){
      el.textContent = d + 'd ' + fmt(h) + 'h ' + fmt(m) + 'm ' + fmt(s) + 's';
    }else{
      el.textContent = fmt(h) + 'h ' + fmt(m) + 'm ' + fmt(s) + 's';
    }
  }

  var target = computeTarget();

  function tick(){
    var now = new Date();
    var diff = target - now;

    if(mode === 'daily' && diff <= 0){
      target = computeTarget(); // roll to next day
      diff = target - now;
    } else if(mode === 'date' && diff <= 0){
      render(0);
      clearInterval(timer);
      return;
    }

    render(diff);
  }

  tick();
  var timer = setInterval(tick, 1000);
})();
</script>

</section>

